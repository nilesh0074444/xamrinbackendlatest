@model List<SDCOC.Models.OtherPendingNotications>

<a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true" id="pendingnotifcations">
    <i class="icon-bell"></i>
    <span class="badge badge-default">@Model.Count</span>
</a>
<ul class="dropdown-menu">
    <li class="external">
        <h3>
            <span class="bold">@Model.Count pending</span> notifications</h3>
        <a href="page_user_profile_1.html"></a>
    </li>
    <li>
        <ul class="dropdown-menu-list scroller" style="height: 250px;" data-handle-color="#637283">
            @if (Model.Count == 0)
            {

                <li>
                    <a href="javascript:void(0);">
                        <span class="message">You have no new messages ! </span>
                    </a>
                </li>
            }
            else
            {
                foreach (var i in Model)
                {
                    string MessageText = i.DisplayText;
                   
                         <li>
                             <a href="javascript:;">
                                 <span class="time">@SDCOC.Models.Common.TimeAgo(Convert.ToDateTime(i.NotificationReceivedDate))</span>
                                 <span class="details">
                                     @* <span class="label label-sm label-icon label-success">
                                                                                    <i class="fa fa-plus"></i>
                                                                                </span>*@
                                     @MessageText
                                 </span>
                             </a>
                         </li>
                }
            }



        </ul>
    </li>
</ul>
