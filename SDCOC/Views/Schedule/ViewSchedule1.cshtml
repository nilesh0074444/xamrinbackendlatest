        //call action here

        var sturl = '@Url.Action("ActiveInactiveScheduleByID")';

        $.ajax({
            url: sturl,
            type: 'GET',
            dataType: 'json',
            data: {
                'ID': $("#hdnupdateid").val(),
                'status': $("#hdnstatus").val()
            },
            success: function (data) {
                if (data == "success") {
                 
